<Window x:Class="BaseDatosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaseDatosWPF"
        mc:Ignorable="d"
        Title="Contactos" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="txtNombre" Margin="0,0,0,5"/>
            <TextBox x:Name="txtCorreo" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTelefono" Margin="0,0,0,5"/>
            <Button Content="Guardar" x:Name="btnGuardar" Click="btnGuardar_Click"/>

        </StackPanel>
        
    </Grid>
</Window>
